import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner ip=new Scanner(System.in);
        int n=ip.nextInt();
        int[] arr=new int[n];
        for(int i=0;i<n;i++)
        {
            arr[i]=ip.nextInt();
        }
        float pos=0,neg=0;
        for(int i=0;i<n;i++)
        {
            if(arr[i] > 0)
            {
                pos++;
            }
            else
            {
                neg++;
            }
        }
        System.out.printf("Count of Positive Integer is %.2f\n",pos);
        System.out.printf("Count of Negative Integer is %.2f",neg);
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
    }
}
